    },
    "privacyUrl": {
      "type": "string"
    },
    "redisCacheAccountName": {
      "type": "string"
    },
    "resourceGroup": {
      "type": "string"
    },
    "aaaLicenseClientId": {
      "type": "string"
    },
    "SupportLinksELearningUrl": {
      "type": "string"
    },
    "SupportLinksKnowledgeBaseUrl": {
      "type": "string"
    },
    "SupportLinksProductManualsUrl": {
      "type": "string"
    },
    "SupportLinksSupportApiUrl": {
      "type": "string"
    },
    "SupportLinksSupportCommunityUrl": {
      "type": "string"
    },
    "PandaServiceBaseUrl": {
      "type": "string"
    },
    "vaultResourceGroup": {
      "type": "string"
    },
    "vaultName": {
      "type": "string"
    },
    "guids": {
      "type": "object",
      "defaultValue": {}
    },
    "applicationTitleUrl": {
      "type": "string"
    }
  },
  "variables": {
    "appInsightsName": "[concat(parameters('coreResourceGroup'), '-ai')]",
    "subscriptionId": "[subscription().subscriptionId]",
    "applicationLogoUrl": "[concat(parameters('WorkspaceBaseUrl'), '/', parameters('applicationSuffix'), '/')]",
    "iconUrl": "[concat(parameters('cdnBaseUrl'), '/icons')]",
    "settingsUrl": "[concat(parameters('WorkspaceBaseUrl'), '/', parameters('applicationSuffix'), '/org/{orgId}')]",
    "cdnIconUrl": "[concat(parameters('cdnBaseUrl'), '/icons')]",
    "cdnAppUrl": "[concat(parameters('cdnbaseurl'), '/', parameters('appName'), '/', parameters('version'))]",
    "apimAppUrl": "[concat('https://', parameters('apiDNS'), '/apps/', parameters('appName'))]",
    "gatewayPath": "[concat('/', parameters('applicationSuffix'))]",
    "cookiePath": "[concat('/', parameters('applicationSuffix'))]",
    "orgSwicherUrl": "[concat(parameters('WorkspaceBaseUrl'), '/workspaceselector')]",
    "addOrganizationUrl": "[concat(parameters('WorkspaceBaseUrl'), '/pers')]",
    "baseAppUrl": "[concat(parameters('WorkspaceBaseUrl'), '/', parameters('applicationSuffix'))]",
    "tenantId": "[subscription().tenantId]",
    "appIdentityResourceId": "[resourceId(parameters('resourceGroup'), 'Microsoft.App/containerapps', parameters('containerName'))]"
  },
  "resources": [
    {
      "apiVersion": "2022-11-01-preview",
      "name": "[parameters('containerName')]",
      "type": "Microsoft.App/containerApps",
      "kind": "containerapps",
      "location": "[resourceGroup().location]",
      "tags": "[parameters('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('appServiceEnvironmentName'))]",
        "configuration": {
          "secrets": [
              {
                "name": "registrypassword",
                "value": "[parameters('containerRegistrySecretValue')]"
              }
          ],
          "registries": [
            {
              "server": "[parameters('containerRegistryServer')]",
              "username": "[parameters('containerRegistryUser')]",
              "passwordSecretRef": "registrypassword"
            }
          ],
          "activeRevisionsMode": "Single",
          "ingress": {            
              "external": true,
              "transport": "Auto",
              "allowInsecure": false,
              "targetPort": 80,
              "stickySessions": {
                "affinity": "none"
            }           
          }
        },
        "template": {
          "containers": [
            {
              "name": "[parameters('containerName')]",
              "image": "[concat(parameters('containerRegistryServer'), '/', parameters('containerImageName'))]",
              "command": [],
              "resources": {
                "cpu": "[parameters('containerCPU')]",
                "memory": "[parameters('containerMemory')]"
              },
              "env": [
                {
                  "name": "AppSettings__ApplicationLogoUrl",
                  "value": "[variables('applicationLogoUrl')]"
                },
                {
                  "name": "AppSettings__ApplicationTitleUrl",
                  "value": "[parameters('applicationTitleUrl')]"
                },                
                {
                  "name": "AppSettings__GoogleTagManagerId",
                  "value": "[parameters('googleTagManagerId')]"
                },
                {
                  "name": "AppSettings__PollingInterval",
                  "value": "[parameters('pollingInterval')]"
                },
                {
                  "name": "AppSettings__SettingsUrl",
                  "value": "[variables('settingsUrl')]"
                },
                {
                  "name": "AppSettings__EnableLicensing",
                  "value": "[parameters('enableLicensing')]"
                },
                {
                  "name": "AppSettings__EnableMasterAdministrations",
                  "value": "[parameters('enableMasterAdministrations')]"
                },
                {
                  "name": "AppSettings__EnableMasterAdministrationsClientSelection",
                  "value": "[parameters('enableMasterAdministrationsClientSelection')]"
                },
                {
                  "name": "AppSettings__EnableTripleARC",
                  "value": "[parameters('enableTripleARC')]"
                },
                {
                  "name": "AppSettings__ShowMasterAdministrationsUI",
                  "value": "[parameters('showMasterAdministrationsUI')]"
                },
                {
                  "name": "AppSettings__VaultUri",
                  "value": "[parameters('vaultUri')]"
                },
                {
                  "name": "ASPNETCORE_ENVIRONMENT",
                  "value": "[parameters('ASPNETCORE_ENVIRONMENT')]"
                },
                {
                  "name": "cdn__CdnBaseUrl",
                  "value": "[parameters('cdnBaseUrl')]"
                },
                {
                  "name": "cdn__IconUrl",
                  "value": "[variables('cdnIconUrl')]"
                },
                {
                  "name": "cdn__url",
                  "value": "[variables('cdnAppUrl')]"
                },
                {
                  "name": "ClientContactConfiguration__ClientContactApiUrl",
                  "value": "[parameters('clientContactApiUrl')]"
                },
                {
                  "name": "ClientContactConfiguration__ClientContactHostingUrl",
                  "value": "[parameters('clientContactHostingUrl')]"
                },
                {
                  "name": "ClientContactConfiguration__EnableAdministrationContactManagement",
                  "value": "[parameters('enableAdministrationContactManagement')]"
                },
                {
                  "name": "ClientContactConfiguration__InvitationRedirectUrl",
                  "value": "[parameters('invitationRedirectUrl')]"
                },
                {
                  "name": "EnvironmentCdnSource__DefaultEnvironmentSources__0",
                  "value": "[parameters('cdnBaseUrl')]"
                },
                {
                  "name": "frontendConfigurations__wk-marketplace-app__ignoreCookieConsentForLogging",
                  "value": "[parameters('ignoreCookieConsentForLogging')]"
                },
                {
                  "name": "frontendConfigurations__wktaae-OrganizationManagement__apiUrl",
                  "value": "[variables('apimAppUrl')]"
                },
                {
                  "name": "frontendConfigurations__wktaae-OrganizationManagement__appInsightsInstrumentationKey",
                  "value": "[reference(resourceId(parameters('coreResourceGroup'), 'Microsoft.Insights/components', variables('appInsightsName')), '2014-04-01').InstrumentationKey]"
                },
                {
                  "name": "Gateway__Paths__0",
                  "value": "[variables('gatewayPath')]"
                },
                {
                  "name": "General__Environment",
                  "value": "[parameters('environment')]"
                },
                {
                  "name": "MasterAdministrationConfiguration__EnableAdministrationCustomIdentifier",
                  "value": "[parameters('enableAdministrationCustomIdentifier')]"
                },
                {
                  "name": "MasterAdministrationConfiguration__EnableAdministrationImport",
                  "value": "[parameters('enableAdministrationImport')]"
                },
                {
                  "name": "MasterAdministrationConfiguration__EnableNewAdministrationDialog",
                  "value": "[parameters('enableNewAdministrationDialog')]"
                },
                {
                  "name": "MasterAdministrationConfiguration__MasterAdministrationsApiUrl",
                  "value": "[parameters('masterAdministrationsApiUrl')]"
                },
                {
                  "name": "MasterAdministrationConfiguration__SourceCountry",
                  "value": "[parameters('masterAdministrationSourceCountry')]"
                },
                {
                  "name": "OAuthShellApiConfigurations__clientContacts__ClientId",
                  "value": "[parameters('clientContactsClientId')]"
                },
                {
                  "name": "OAuthShellApiConfigurations__clientContacts__Scope",
                  "value": "[parameters('clientContactsScope')]"
                },
                {
                  "name": "OAuthShellApiConfigurations__masterAdministrations__ClientId",
                  "value": "[parameters('oAuthShellApiConfigurationsMasterAdministrationClientid')]"
                },
                {
                  "name": "OAuthShellApiConfigurations__masterAdministrations__Scope",
                  "value": "[parameters('oAuthShellApiConfigurationsMasterAdministrationScope')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__AdditionalScopes___0",
                  "value": "[parameters('apiOAuthConfigurationDefaultScope')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__apiUrl",
                  "value": "[variables('apimAppUrl')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__ApplicationId",
                  "value": "[parameters('oauthshelltripleaconfigurationApplicationid')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__ClientId",
                  "value": "[parameters('oauthshelltripleaconfigurationClientid')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__CookiePath",
                  "value": "[variables('cookiePath')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__EnableTripleARC",
                  "value": "[parameters('enableTripleARC')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__Environment",
                  "value": "[parameters('environment')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__FilterPersonalEnvironment",
                  "value": "[parameters('filterPersonalEnvironment')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__OrgSwicherUrl",
                  "value": "[variables('orgSwicherUrl')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__SessionDurationInHours",
                  "value": "[parameters('sessionDurationInHours')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__SuiteName",
                  "value": "[parameters('suiteName')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__UseRedisCache",
                  "value": "[parameters('oAuthShellApiConfigurationsUseRedisCache')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__WorkspaceBaseUrl",
                  "value": "[parameters('WorkspaceBaseUrl')]"
                },
                {
                  "name": "OAuthShellTripleAConfiguration__WorkspaceName",
                  "value": "[parameters('workspaceName')]"
                },
                {
                  "name": "OrganizationConfiguration__AddOrganizationUrl",
                  "value": "[variables('addOrganizationUrl')]"
                },
                {
                  "name": "OrganizationConfiguration__BaseUrl",
                  "value": "[variables('baseAppUrl')]"
                },
                {
                  "name": "PendoCustomSourceConfiguration__ImgSources",
                  "value": "[parameters('pendoImgSources')]"
                },
                {
                  "name": "PendoCustomSourceConfiguration__ScriptSources",
                  "value": "[parameters('pendoScriptSources')]"
                },
                {
                  "name": "PendoCustomSourceConfiguration__StyleSources",
                  "value": "[parameters('pendoStyleSources')]"
                },
                {
                  "name": "PrivacyCookieLinks__CookieUrl",
                  "value": "[parameters('cookieUrl')]"
                },
                {
                  "name": "PrivacyCookieLinks__PrivacyUrl",
                  "value": "[parameters('privacyUrl')]"
                },
                {
                  "name": "RedisConfigurationSettings__AccountName",
                  "value": "[parameters('redisCacheAccountName')]"
                },
                {
                  "name": "RedisConfigurationSettings__ResourceGroupName",
                  "value": "[parameters('resourceGroup')]"
                },
                {
                  "name": "RedisConfigurationSettings__SubscriptionId",
                  "value": "[variables('subscriptionId')]"
                },
                {
                  "name": "RedisConfigurationSettings__TenantId",
                  "value": "[variables('tenantId')]"
                },
                {
                  "name": "ShellLicenseClient__AAALicenseClientId",
                  "value": "[parameters('aaaLicenseClientId')]"
                },
                {
                  "name": "SupportLinks__ELearningUrl",
                  "value": "[parameters('SupportLinksELearningUrl')]"
                },
                {
                  "name": "SupportLinks__KnowledgeBaseUrl",
                  "value": "[parameters('SupportLinksKnowledgeBaseUrl')]"
                },
                {
                  "name": "SupportLinks__ProductManualsUrl",
                  "value": "[parameters('SupportLinksProductManualsUrl')]"
                },
                {
                  "name": "SupportLinks__SupportApiUrl",
                  "value": "[parameters('SupportLinksSupportApiUrl')]"
                },
                {
                  "name": "SupportLinks__SupportCommunityUrl",
                  "value": "[parameters('SupportLinksSupportCommunityUrl')]"
                },
                {
                  "name": "ApplicationInsights__InstrumentationKey",
                  "value": "[reference(resourceId(parameters('coreResourceGroup'), 'Microsoft.Insights/components', variables('appInsightsName')), '2014-04-01').InstrumentationKey]"
                },
                {
                  "name": "PandaService__BaseUrl",
                  "value": "[parameters('PandaServiceBaseUrl')]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 0
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "enableVaultSecurity",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('vaultResourceGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/containerapps', parameters('containerName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults/accessPolicies",
              "name": "[concat(parameters('vaultName'), '/add')]",
              "apiVersion": "2018-02-14",
              "properties": {
                "accessPolicies": [
                  {
                    "tenantId": "[reference(variables('appIdentityResourceId'), '2022-11-01-preview', 'Full').identity.tenantId]",
                    "objectId": "[reference(variables('appIdentityResourceId'), '2022-11-01-preview', 'Full').identity.principalId]",
                    "permissions": {
                      "keys": [
                        "UnwrapKey",
                        "WrapKey"
                      ],
                      "secrets": [
                        "Get",
                        "List"
                      ],
                      "certificates": [
                        "Get",
                        "List",
                        "ListIssuers"
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "setupRoleAssignments",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[resourceGroup().name]",
      "dependsOn": [
        "[resourceId('Microsoft.App/containerapps', parameters('containerName'))]",
        "[variables('appIdentityResourceId')]"
      ],
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "webAppIdentityResourceId": {
            "value": "[variables('appIdentityResourceId')]"
          },
          "guids": {
            "value": "[parameters('guids')]"
          },
          "redisCacheAccountName": {
            "value": "[parameters('redisCacheAccountName')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "webAppIdentityResourceId": {
              "type": "string"
            },
            "guids": {
              "type": "object",
              "defaultValue": {}
            },
            "redisCacheAccountName": {
              "type": "string"
            }
          },
          "variables": {
            "redisaccount": "[parameters('redisCacheAccountName')]",
            "redisContributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'e0f68234-74aa-48ed-b826-c38b57376e17')]"
          },
          "resources": [
            {
              "type": "Microsoft.Cache/Redis/providers/roleAssignments",
              "apiVersion": "2018-09-01-preview",
              "name": "[concat(variables('redisaccount'), '/Microsoft.Authorization/', parameters('guids').redis)]",
              "properties": {
                "roleDefinitionId": "[variables('redisContributor')]",
                "principalId": "[reference(parameters('webAppIdentityResourceId'), '2022-11-01-preview', 'Full').identity.principalId]",
                "principalType": "ServicePrincipal"
              }
            }
          ]
        }
      }
    }
  ],
   "outputs": {
    "webContainerFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerapps', parameters('containerName'))).dnsSettings.fqdn]"
    }
  }
}
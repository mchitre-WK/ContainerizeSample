    "coreResourceGroup": {
      "type": "string"
    },
    "invitationRedirectUrl": {
      "type": "string"
    },
    "ignoreCookieConsentForLogging": {
      "type": "string"
    },
    "environment": {
      "type": "string"
    },
    "enableAdministrationCustomIdentifier": {
      "type": "string"
    },
    "enableAdministrationImport": {
      "type": "string"
    },
    "enableNewAdministrationDialog": {
      "type": "string"
    },
    "masterAdministrationsApiUrl": {
      "type": "string"
    },
    "masterAdministrationSourceCountry": {
      "type": "string"
    },
    "clientContactsClientId": {
      "type": "string"
    },
    "clientContactsScope": {
      "type": "string"
    },
    "oAuthShellApiConfigurationsMasterAdministrationClientid": {
      "type": "string"
    },
    "oAuthShellApiConfigurationsMasterAdministrationScope": {
      "type": "string"
    },
    "apiOAuthConfigurationDefaultScope": {
      "type": "string"
    },
    "oauthshelltripleaconfigurationApplicationid": {
      "type": "string"
    },
    "oauthshelltripleaconfigurationClientid": {
      "type": "string"
    },
    "filterPersonalEnvironment": {
      "type": "string"
    },
    "orgSwicherUrl": {
      "type": "string"

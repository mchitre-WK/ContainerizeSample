{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webContainerName": {
      "type": "string"
    },
    "apiContainerName": {
      "type": "string"
    },
    "redisCacheAccountName": {
      "type": "string"
    },
    "resourceGroup": {
      "type": "string"
    },
    "vaultName": {
      "type": "string"
    },  
    "configureKeyvault": {
      "type": "string"
    },
    "configureRedis": {
      "type": "string"
    }
  },
  "variables": {   
    "subscriptionId": "[subscription().subscriptionId]",
    "tenantId": "[subscription().tenantId]",
    "appIdentityResourceId": "[resourceId(parameters('resourceGroup'), 'Microsoft.App/containerapps', parameters('webContainerName'))]",
    "apiIdentityResourceId": "[resourceId(parameters('resourceGroup'), 'Microsoft.App/containerapps', parameters('apiContainerName'))]"    
  },
  "resources": [
    {
      "condition": "[equals(parameters('configureVault'),'True')]",
      "apiVersion": "2017-05-10",
      "name": "enableVaultSecurity",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('resourceGroup')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/containerapps', parameters('webContainerName'))]",
        "[resourceId('Microsoft.App/containerapps', parameters('apiContainerName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.KeyVault/vaults/accessPolicies",
              "name": "[concat(parameters('vaultName'), '/add')]",
              "apiVersion": "2018-02-14",
              "properties": {
                "accessPolicies": [
                  {
                    "tenantId": "[reference(variables('appIdentityResourceId'), '2022-11-01-preview', 'Full').identity.tenantId]",
                    "objectId": "[reference(variables('appIdentityResourceId'), '2022-11-01-preview', 'Full').identity.principalId]",
                    "permissions": {
                      "keys": [
                        "UnwrapKey",
                        "WrapKey"
                      ],
                      "secrets": [
                        "Get",
                        "List"
                      ],
                      "certificates": [
                        "Get",
                        "List",
                        "ListIssuers"
                      ]
                    }
                  },
                  {
                    "tenantId": "[reference(variables('apiIdentityResourceId'), '2022-11-01-preview', 'Full').identity.tenantId]",
                    "objectId": "[reference(variables('apiIdentityResourceId'), '2022-11-01-preview', 'Full').identity.principalId]",
                    "permissions": {
                      "secrets": [
                        "Get",
                        "List"
                      ],
                      "certificates": [
                        "Get",
                        "List",
                        "ListIssuers"
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    {
      "condition": "[equals(parameters('configureRedis'),'True')]",
      "apiVersion": "2017-05-10",
      "name": "setupRoleAssignments",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[resourceGroup().name]",
      "dependsOn": [
        "[resourceId('Microsoft.App/containerapps', parameters('webContainerName'))]",
        "[variables('appIdentityResourceId')]"
      ],
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "webAppIdentityResourceId": {
            "value": "[variables('appIdentityResourceId')]"
          },
          "guids": {
            "value": "[parameters('guids')]"
          },
          "redisCacheAccountName": {
            "value": "[parameters('redisCacheAccountName')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "webAppIdentityResourceId": {
              "type": "string"
            },
            "guids": {
              "type": "object",
              "defaultValue": {}
            },
            "redisCacheAccountName": {
              "type": "string"
            }
          },
          "variables": {
            "redisaccount": "[parameters('redisCacheAccountName')]",
            "redisContributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'e0f68234-74aa-48ed-b826-c38b57376e17')]"
          },
          "resources": [
            {
              "type": "Microsoft.Cache/Redis/providers/roleAssignments",
              "apiVersion": "2018-09-01-preview",
              "name": "[concat(variables('redisaccount'), '/Microsoft.Authorization/', parameters('guids').redis)]",
              "properties": {
                "roleDefinitionId": "[variables('redisContributor')]",
                "principalId": "[reference(parameters('webAppIdentityResourceId'), '2022-11-01-preview', 'Full').identity.principalId]",
                "principalType": "ServicePrincipal"
              }
            }
          ]
        }
      }
    }
  ]
}